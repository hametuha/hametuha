{
	"name": "hametuha/hametuha",
	"description": "WordPress theme for Hametuha",
	"type": "wordpress-theme",
	"license": "GPL-3.0-or-later",
	"require": {
		"php": ">=8.2",
		"hametuha/wpametu": "^1.2.3",
		"hametuha/hamepub": "^1.0.0",
		"hametuha/hashboard": "^1.0.2",
		"hametuha/sharee": "^1.0.0",
		"league/commonmark": "^1.6|^2.3",
		"kunoichi/ga-communicator": "^3.3",
		"youaoi/php-mecab": "^1.0"
	},
	"autoload": {
		"psr-0": {
			"Hametuha": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"HametuhaTest\\": "tests/src"
		}
	},
	"require-dev": {
		"phpunit/phpunit": "^9.6",
		"yoast/phpunit-polyfills": "^2.0"
	},
	"scripts": {
		"test": "phpunit"
	}
}
