{
	"name": "hametuha/hametuha",
	"description": "A WordPress theme for hametuha",
	"minimum-stability": "stable",
	"license": "GPL-3.0-or-later",
	"scripts": {
		"test": "phpunit",
		"cs-config": "phpcs --config-set installed_paths $(pwd)/vendor/wp-coding-standards/wpcs",
		"lint": [
			"@cs-config",
			"phpcs --standard=phpcs.ruleset.xml $(find ./ -name '*.php')"
		],
		"lint:file": [
			"@cs-config",
			"phpcs --standard=phpcs.ruleset.xml "
		],
		"fix": [
			"@cs-config",
			"phpcbf --standard=phpcs.ruleset.xml $(find ./ -name '*.php')"
		]

	},
	"authors": [
		{
			"name": "Hametuha INC.",
			"email": "info@hametuha.co.jp"
		}
	],
	"require": {
		"php": "^7.2",
		"ext-simplexml": "*",
		"ext-curl": "*",
		"hametuha/wpametu": "^1.0.0",
		"hametuha/hamepub": "^1.0.0",
		"hametuha/hashboard": "^0.9",
		"hametuha/sharee": "^0.8.4",
		"kunoichi/set-menu": "^1.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^5.7|^6",
		"squizlabs/php_codesniffer": "^3.0",
		"wp-coding-standards/wpcs": "^2.0"

	},
	"autoload": {
		"psr-0": {
			"Hametuha": "src"
		}
	}
}
