{
	"name": "hametuha/hametuha",
	"description": "Hametuha WordPress site",
	"type": "project",
	"license": "GPL-3.0-or-later",
	"repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org"
		},
		{
			"type": "package",
			"package": {
				"name": "hametuha/hamethread",
				"version": "dev-master",
				"type": "wordpress-plugin",
				"dist": {
					"url": "https://github.com/hametuha/hamethread/releases/latest/download/hamethread.zip",
					"type": "zip"
				}
			}
		},
		{
			"type": "package",
			"package": {
				"name": "hametuha/related-ad-patch",
				"version": "dev-main",
				"type": "wordpress-plugin",
				"dist": {
					"url": "https://github.com/hametuha/related-ad-patch/releases/latest/download/related-ad-patch.zip",
					"type": "zip"
				}
			}
		}
	],
	"require": {
		"php": ">=7.4",
		"johnpbloch/wordpress": "6.1.7",
		"composer/installers": "^2.0",
		"wpackagist-plugin/contact-form-7": "5.7.7",
		"wpackagist-plugin/flamingo": "*",
		"wpackagist-plugin/jetpack": "*",
		"wpackagist-plugin/wp-yomigana": "*",
		"wpackagist-plugin/gianism": "*",
		"hametuha/hamethread": "dev-master",
		"hametuha/related-ad-patch": "dev-main",
		"wpackagist-plugin/hamail": "*",
		"wpackagist-plugin/hamelp": "*",
		"wpackagist-plugin/wp-hamazon": "5.1.3",
		"wpackagist-plugin/never-let-me-go": "*",
		"wpackagist-plugin/wp-multibyte-patch": "^2.9",
		"wpackagist-plugin/wp-pagenavi": "^2.94",
		"wpackagist-plugin/duplicate-post": "^4.5",
		"wpackagist-plugin/hagakure": "^1.3",
		"wpackagist-plugin/image-widget": "^4.4",
		"wpackagist-plugin/breadcrumb-navxt": "^7.4",
		"wpackagist-plugin/anyway-feedback": "^1.1",
		"wpackagist-plugin/cookie-tasting": "^1.0",
		"wpackagist-plugin/query-monitor": "^3.19",
		"wpackagist-plugin/hameslack": "*"
	},
	"require-dev": {
		"phpunit/phpunit": "^8.5.33",
		"yoast/phpunit-polyfills": "^1.0|^2.0",
		"wp-coding-standards/wpcs": "^3.0",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0"
	},
	"scripts": {
		"test": [
			"docker compose exec wordpress bash -c \"cd /var/www/html/wp-content/themes/hametuha && composer test\""
		],
		"lint": [
			"@lint:theme"
		],
		"lint:theme": "phpcs --standard=phpcs.ruleset.xml themes/hametuha",
		"fix": [
			"@fix:theme"
		],
		"fix:theme": "phpcbf --standard=phpcs.ruleset.xml themes/hametuha",
		"wp": "docker compose exec -u www-data wordpress wp",
		"start": "docker compose up -d",
		"stop": "docker compose down",
		"restart": "docker compose down && docker compose up -d",
		"build": "docker compose up -d --build",
		"logs": "docker compose logs -f",
		"logs:debug": "docker compose exec wordpress tail -f /var/www/html/wp-content/debug.log",
		"logs:php": "docker compose logs -f wordpress",
		"logs:nginx": "docker compose logs -f nginx"
	},
	"extra": {
		"wordpress-install-dir": "wp",
		"installer-paths": {
			"plugins/{$name}/": [
				"type:wordpress-plugin"
			]
		}
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"johnpbloch/wordpress-core-installer": true
		}
	}
}
