{
  "name": "hametuha/hametuha",
  "description": "A WordPress theme for hametuha",
  "minimum-stability": "stable",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "test": "phpunit",
    "lint": "phpcs --standard=phpcs.ruleset.xml $(find ./ -name '*.php')",
    "fix": "phpcbf --standard=phpcs.ruleset.xml $(find ./ -name '*.php')"
  },
  "authors": [
    {
      "name": "Hametuha INC.",
      "email": "info@hametuha.co.jp"
    }
  ],
  "require": {
    "php": "^7.2",
    "ext-simplexml": "*",
    "ext-curl": "*",
    "hametuha/wpametu": "^1.0.2",
    "hametuha/hamepub": "^1.0.0",
    "hametuha/hashboard": "^0.9.1",
    "hametuha/sharee": "^0.8.9",
    "league/commonmark": "^1.6|^2.3",
    "kunoichi/ga-communicator": "^3.3",
    "youaoi/php-mecab": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7|^6|^7",
    "yoast/phpunit-polyfills": "^2.0",
    "squizlabs/php_codesniffer": "^3.0",
    "wp-coding-standards/wpcs": "^2.0",
    "phpcompatibility/php-compatibility": "^9.3",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0"

  },
  "autoload": {
    "psr-0": {
      "Hametuha": "src"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
